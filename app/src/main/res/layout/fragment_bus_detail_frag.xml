<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".busDetail_frag">


    <ImageView
        android:id="@+id/bus_logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_web_hi_res_512" />

    <TextView
        android:id="@+id/fragment_bus_detail_frag_tvBusName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"

        android:layout_marginRight="25dp"
        android:gravity="center_horizontal|center_vertical"
        android:hint="Bus Name"
        android:text="BUS NAME"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/fragment_bus_detail_frag_tvBusNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:text="BUS NUMBER"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="Time"
            android:textAllCaps="true"
            android:textColor="#FF7800"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="FROM"
            android:textAllCaps="true"
            android:textColor="#FF7800"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="TO"
            android:textAllCaps="true"
            android:textColor="#FF7800"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/schedule" />

        <TextView
            android:id="@+id/fragment_bus_detail_frag_tvTime1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="5"
            android:gravity="center_horizontal|center_vertical"
            android:text="TIME"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fragment_bus_detail_frag_tvFrom1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="5"
            android:gravity="center_horizontal|center_vertical"
            android:text="FROM"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fragment_bus_detail_frag_tvTo1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="5"
            android:gravity="center_horizontal|center_vertical"
            android:text="TO"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/schedule" />

        <TextView
            android:id="@+id/fragment_bus_detail_frag_tvTime2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="5"
            android:gravity="center_horizontal|center_vertical"
            android:text="TIME"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fragment_bus_detail_frag_tvFrom2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="5"
            android:gravity="center_horizontal|center_vertical"
            android:text="FROM"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fragment_bus_detail_frag_tvTo2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="5"
            android:gravity="center_horizontal|center_vertical"
            android:text="TO"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>