<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/apk/tools"
android:id="@+id/layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/darkblue"
android:gravity="center_horizontal"
android:orientation="vertical"
tools:context=".homeFragment">

<Button
    android:id="@+id/main_activity_btn1"

    android:layout_width="250dp"
    android:layout_height="50dp"
    android:layout_marginTop="40dp"

    android:background="@drawable/buton_select_1"
    android:gravity="center_horizontal|center_vertical"
    android:text="Book Seat"
    android:textAllCaps="false"
    android:textColor="@color/white"
    android:textSize="24sp" />

<Button
    android:id="@+id/main_activity_view_schedule"

    android:layout_width="250dp"
    android:layout_height="50dp"
    android:layout_marginTop="40dp"

    android:background="@drawable/buton_select_2"
    android:clickable="true"
    android:gravity="center_horizontal|center_vertical"
    android:text="View Schedule"
    android:textAllCaps="false"
    android:textColor="#FF7800"
    android:textSize="24sp" />

<Button
    android:id="@+id/main_activity_btn3"

    android:layout_width="250dp"
    android:layout_height="50dp"
    android:layout_marginTop="40dp"

    android:background="@drawable/buton_select_1"
    android:gravity="center_horizontal|center_vertical"
    android:text="Track Location"
    android:textAllCaps="false"
    android:textColor="@color/white"
    android:textSize="24sp" />

<Button
    android:id="@+id/BTNsignout"

    android:layout_width="250dp"
    android:layout_height="50dp"
    android:layout_marginTop="250dp"

    android:background="@drawable/buton_select_2"
    android:gravity="center_horizontal|center_vertical"
    android:text="Emergency!"
    android:textColor="#D32F2F"
    android:textSize="24sp" />
</LinearLayout>